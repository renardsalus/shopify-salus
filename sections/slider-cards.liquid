<section class="salus-slider-cards">
  <div class="container">
    <div class="slider-cards-title">
      {% if section.settings.title != blank %}
        <h2>{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings['button-text'] != blank %}
        <a href="{{ section.settings.button-id }}">{{ section.settings['button-text'] }}</a>
      {% endif %}
    </div>
  </div>

  <div class="slider-card-row">
    <div class="swiper CardsSlider">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="card_slider">
              <div class="blog_img">
                <img src="{{ block.settings.image | img_url:'master'}}" alt="{{ block.settings.imagea.alt }}">
              </div>
              <div class="blog_content">
                <h5>{{ block.settings.title }}</h5>
                {% comment %} <a href="{{ block.settings.link }}">
                  <span>{{ block.settings.description }}</span>
                </a> {% endcomment %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="card-slider-pagination">
        <div class="swiper-button-next"></div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Slider Cards",
  "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "button-text",
        "label": "Add you Button Text"
      },
      {
        "type": "url",
        "id": "button-id",
        "label": "Button Link"
      }
  ],
  "blocks": [
    {
      "type": "blocks",
      "name":"blocks",
      "settings": [
        {
          "type": "header",
          "content": "Card Content"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Add your title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Add your description"
        },
        {
          "type":"url",
          "id":"link",
          "label":"Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider Cards"
    }
  ]
}
{% endschema %}
