{% render 'checkout-page-exit-popup', popup: section.settings buttons: section.blocks %}
{% schema %}
{
  "name": "Checkout Page Exit Popup",
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Text",
          "default": "Shop the sale"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "color",
          "id": "button_bg_color",
          "label": "Button Background Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button Text Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "hover_button_bg_color",
          "label": "Button Hover Background Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "hover_button_text_color",
          "label": "Button Hover Text Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "margin_top",
          "label": "Button Margin Top",
          "default": "10px"
        },
        {
          "type": "text",
          "id": "button_id",
          "label": "Button Id"
        }
      ]
    }
  ],
  "settings": [
    {
      "type":"text",
      "id":"heading",
      "label":"Heading"
    },
    {
      "type":"richtext",
      "id":"content",
      "label":"Content",
    },
    {
      "type":"image_picker",
      "id":"image",
      "label":"Image"
    },
    {
      "type":"checkbox",
      "id":"mobile_bg",
      "label":"show Background Image (Mobile)",
      "info":"By enabling this, the same image will appear in the background in mobile view."
    },
    {
      "type":"color",
      "id":"color",
      "label":"Text Backgound Color"
    },
    {
      "type": "number",
      "id": "popup_delay",
      "label": "Popup Delay (seconds)",
      "default": 5,
      "info": "Set the delay time in seconds before the popup appears."
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone Number",
      "default": "0812345679",
      "info": "Phone number copied when click 'call sales'"
    }
  ],
  "presets": [
    {
      "name": "Checkout Page Exit Popup"
    }
  ]
}
{% endschema %}