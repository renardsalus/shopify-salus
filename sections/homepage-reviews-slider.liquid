{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'homepage-reviews-slider.css' | asset_url | stylesheet_tag }}

<section
  class="homepage-reviews-slider"
  data-section-id="{{ section.id }}"
  data-section-type="homepage-reviews-slider"
  style="
    --homepage-reviews-slider-padding-top-desktop: {{ section.settings.section_padding_top_desktop }}px;
    --homepage-reviews-slider-padding-bottom-desktop: {{ section.settings.section_padding_bottom_desktop }}px;
    --homepage-reviews-slider-padding-top-mobile: {{ section.settings.section_padding_top_mobile }}px;
    --homepage-reviews-slider-padding-bottom-mobile: {{ section.settings.section_padding_bottom_mobile }}px;
    background-color: #FFFFFF; /* Fixed white background */
  "
>
  <div class="homepage-reviews-slider__wrapper">
    {% if section.blocks.size > 0 %}
      <div class="swiper-container homepage-reviews-slider__swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide homepage-reviews-slider__slide" {{ block.shopify_attributes }}>
              <div class="homepage-reviews-slider__card">
                <div class="homepage-reviews-slider__star-rating">
                  {% render 'icon-star' -%}
                  {%- render 'icon-star' -%}
                  {%- render 'icon-star' -%}
                  {%- render 'icon-star' -%}
                  {%- render 'icon-star' %}
                </div>

                {% if block.settings.review_title != blank %}
                  <h3 class="homepage-reviews-slider__title">{{ block.settings.review_title }}</h3>
                {% endif %}

                {% if block.settings.review_text != blank %}
                  <div class="homepage-reviews-slider__text">{{ block.settings.review_text }}</div>
                {% endif %}

                <div class="homepage-reviews-slider__author-details">
                  {% if block.settings.author_image != blank %}
                    {% assign author_img = block.settings.author_image %}
                    <img
                      src="{{ author_img | image_url: width: 100 }}"
                      alt="{{ author_img.alt | default: block.settings.author_name | escape }}"
                      class="homepage-reviews-slider__author-image"
                      width="40"
                      height="40"
                      loading="lazy"
                    >
                  {% endif %}
                  {% if block.settings.author_name != blank %}
                    <p class="homepage-reviews-slider__author-name">
                      {{ block.settings.author_name }}
                      {% if block.settings.is_verified %}
                        {% render 'homepage-reviews-slider-blue-checkmark' %}
                      {% endif %}
                    </p>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        {% if section.settings.show_navigation_arrows %}
          <button class="carousel-arrow arrow-left homepage-reviews-slider__nav-button homepage-reviews-slider__nav-button--prev">
            {% render 'icon-arrow-left' %}
          </button>
          <button class="carousel-arrow arrow-right homepage-reviews-slider__nav-button homepage-reviews-slider__nav-button--next">
            {% render 'icon-arrow-right' %}
          </button>
        {% endif %}
        {% if section.settings.show_pagination_dots %}
          <div class="swiper-pagination homepage-reviews-slider__pagination"></div>
        {% endif %}
      </div>
      {% if section.settings.button_link != blank and section.settings.button_label != blank %}
        <div class="homepage-reviews-slider__action-area">
          <a
            href="{{ section.settings.button_link }}"
            class="homepage-reviews-slider__button button button--secondary"
          >
            {{ section.settings.button_label }}
          </a>
        </div>
      {% endif %}

    {% else %}
      <div class="placeholder-content">
        {{ 'no_content' | t }}
      </div>
    {% endif %}
  </div>
</section>

<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer="defer"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carouselElement = document.querySelector('.homepage-reviews-slider__swiper');
    if (carouselElement) {
      const swiper = new Swiper(carouselElement, {
        loop: {{ section.settings.enable_loop }},
        autoplay: {{ section.settings.enable_autoplay }} ? {
          delay: {{ section.settings.autoplay_speed }},
          disableOnInteraction: false,
        } : false,
        speed: 800,
        grabCursor: true,

        pagination: {
          el: '.homepage-reviews-slider__pagination',
          clickable: true,
        },

        navigation: {
          nextEl: '.homepage-reviews-slider__nav-button--next',
          prevEl: '.homepage-reviews-slider__nav-button--prev',
        },

        a11y: {
          enabled: true,
          prevSlideMessage: 'Previous review',
          nextSlideMessage: 'Next review',
          firstSlideMessage: 'This is the first review',
          lastSlideMessage: 'This is the last review',
          paginationBulletMessage: '{% raw %}Go to review {{index}}{% endraw %}',
        },

        breakpoints: {
          // Mobile breakpoint (0px to 767px)
          0: {
            slidesPerView: {{ section.settings.slides_per_view_mobile }},
            slidesPerGroup: {{ section.settings.slides_per_group_mobile }},
            spaceBetween: {{ section.settings.space_between_slides_mobile }}
          },
          // Desktop breakpoint (768px and up)
          768: {
            slidesPerView: {{ section.settings.slides_per_view_desktop }},
            slidesPerGroup: {{ section.settings.slides_per_group_desktop }},
            spaceBetween: {{ section.settings.space_between_slides_desktop }}
          }
        }
      });
    }
  });
</script>

