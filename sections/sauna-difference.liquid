{% assign icons = product.metafields.difference_icons %}
{% assign headings = product.metafields.difference_headings %}
{% assign details = product.metafields.difference_details %}

{% if icons.size > 0 or headings.size > 0 or details.size > 0 %}
  {%- if section.index > 2 and section.location != 'header' -%}
    <link rel="stylesheet" href="{{ 'icons-with-text.css' | asset_url }}" media="print" onload="this.media='all'">
  {%- else -%}
    {{ 'icons-with-text.css' | asset_url | stylesheet_tag }}
  {%- endif -%}

  {%- liquid
    assign color_scheme = section.settings.color_scheme
    assign grid_classes = 'auto-cols-1'
    if icons.size == 2 or headings.size == 2
      assign grid_classes = grid_classes | append: ' sm:auto-cols-2 icons-with-text--narrow'
    elsif icons.size == 3 or headings.size == 3
      assign grid_classes = grid_classes | append: ' sm:auto-cols-2 md:auto-cols-3'
    elsif icons.size > 3 or headings.size > 3
      assign grid_classes = grid_classes | append: ' sm:auto-cols-2 md:auto-cols-3 lg:auto-cols-4'
    endif
  -%}

  {%- unless section.settings.full_width -%}
    <div class="container">
  {%- endunless -%}

  <div
    class="icons-with-text section {% if section.settings.vertical_spacing %}v-spacing{% endif %} {% if section.settings.full_width %} section--full-width{% if section.settings.dividers != "none" %} {{ section.settings.dividers }}{% endif %}{% endif %} section--padded-{{ section.settings.section_height }}{% unless color_scheme == 'none' %} color-scheme color-scheme--{{ color_scheme }}{% endunless %}"
    id="{{ section.id }}"
  >
    <div class="container relative">
      {%- if product.metafields.diff_heading.heading != blank -%}
        <h2
          class="h4 section__heading text-center"
          {% if settings.animations_enabled != 'disabled' and section.settings.prevent_animation == false %}
            data-cc-animate
          {% endif %}
        >
          {{ product.metafields.diff_heading.heading.value }}
        </h2>
      {%- endif -%}

      <carousel-slider
        class="carousel grid__layout block relative"
        inactive
        {% if section.settings.mobile_stack %}
          disable-mobile="true"
        {% endif %}
      >
        <div class="slider-nav slide-nav--inline flex justify-between absolute top-0 h-full no-js-hidden">
          <button
            type="button"
            class="slider-nav__btn tap-target tap-target--left btn text-current has-ltr-icon"
            name="prev"
            aria-controls="slider-{{ section.id }}"
          >
            <span class="visually-hidden">{{ 'general.slider.previous' | t }}</span>
            {% render 'icon-chevron-left' %}
          </button>
          <button
            type="button"
            class="slider-nav__btn tap-target tap-target--right btn text-current has-ltr-icon"
            name="next"
            aria-controls="slider-{{ section.id }}"
          >
            <span class="visually-hidden">{{ 'general.slider.next' | t }}</span>
            {% render 'icon-chevron-right' %}
          </button>
        </div>

        <div class="slider slider--contained relative slider--no-scrollbar" id="slider-{{ section.id }}">
          <ul class="slider__grid grid gap-theme {{ grid_classes }}">
            {% for i in (1..details.size) %}
              {% assign loop_index = forloop.index %}
              <li
                class="slider__item flex{% if section.settings.icon_position == 'above' %} flex-col{% endif %} {% if section.settings.text_layout == '1' %}justify-center items-center {% else %}justyify-start layout-2{% endif %}"

                {% if settings.animations_enabled != 'disabled' and section.settings.prevent_animation == false %}
                  data-cc-animate data-cc-animate-delay="{{ forloop.index | times: 0.07 }}s"
                {% endif %}
              >
                {% for icon in icons %}
                  {% if loop_index == forloop.index %}
                    {{ icon | last | image_url: width: section.settings.icon_size | image_tag: loading: 'lazy' }}
                  {% endif %}
                {% endfor %}

                <div class="icons-with-text__text rte{% if section.settings.icon_position == 'above' %} mt-2 text-center icons-with-text__text--icons-above{% endif %}">
                  <div class="inline-icon-row">
                    {% if section.settings.icon_position == 'inline' %}
                      {% for icon in icons %}
                        {% if loop_index == forloop.index %}
                          {{ icon | last | image_url: width: section.settings.icon_size | image_tag: loading: 'lazy' }}
                        {% endif %}
                      {% endfor %}
                    {% endif %}
                    {% for heading in headings %}
                      {% if loop_index == forloop.index %}
                        <div class="m-0 icons-with-text__title text-body-{{ section.settings.title_type_scale }}">
                          <strong>{{ heading | last }}</strong>
                        </div>
                      {% endif %}
                    {%- endfor -%}
                  </div>

                  {% for detail in details %}
                    {%- if loop_index == forloop.index -%}
                      <div class="rte text-body-{{ section.settings.text_type_scale }}">
                        {{ detail | last | metafield_tag }}
                      </div>
                    {%- endif -%}
                  {% endfor %}
                </div>
              </li>
            {%- endfor -%}
          </ul>
        </div>
      </carousel-slider>
    </div>
  </div>

  {%- unless section.settings.full_width -%}
    </div>
  {%- endunless -%}
{%- endif -%}
{% schema %}
