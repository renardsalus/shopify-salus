{% assign color_scheme = section.settings.color_scheme %}
<div
  class="page-banner {% unless color_scheme == 'default' %} color-scheme color-scheme--{{ color_scheme }}{% endunless %}"
>
  <div class="container">
    <div class="banner-title">
      <h1>
        {{ section.settings.heading }}
        {% if section.settings.show_counter and section.settings.counter_text != blank %}
          <span class="font-heading page-banner__count">
            (
            {{- section.settings.counter_text -}}
            )
          </span>
        {% endif %}
      </h1>
    </div>
    {% if section.settings.content != blank %}
      <div class="category-hero-content__description mt-4">
        {{ section.settings.content }}
      </div>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "Page Banner",
  "settings": [
    {
      "type":"text",
      "id":"heading",
      "label": "Heading"
    },
    {
      "type":"richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type":"checkbox",
      "id":"show_counter",
      "label": "Show Counter"
    },
    {
      "type":"text",
      "id":"counter_text",
      "label":"Counter Text"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "1",
          "label": "Scheme 1"
        },
        {
          "value": "2",
          "label": "Scheme 2"
        },
        {
          "value": "3",
          "label": "Scheme 3"
        }
      ],
      "default": "default"
    },
  ],
  "presets": [
    {
      "name": "Page Banner"
    }
  ]
}
{% endschema %}
