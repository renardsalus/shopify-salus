{% comment %}
  ============================================================
  Section: Homepage Hero Carousel
  ============================================================
  This section creates a dynamic, multi-slide hero carousel
  for the homepage, featuring configurable content and imagery.
  It supports both desktop and mobile specific images and
  content styling.
{% endcomment %}

{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'homepage-hero-carousel.css' | asset_url | stylesheet_tag }}

<section
  class="homepage-hero-carousel"
  data-section-id="{{ section.id }}"
  data-section-type="homepage-hero-carousel"
  style="
    --homepage-hero-carousel-padding-top-desktop: {{ section.settings.section_padding_top_desktop }}px;
    --homepage-hero-carousel-padding-bottom-desktop: {{ section.settings.section_padding_bottom_desktop }}px;
    --homepage-hero-carousel-padding-top-mobile: {{ section.settings.section_padding_top_mobile }}px;
    --homepage-hero-carousel-padding-bottom-mobile: {{ section.settings.section_padding_bottom_mobile }}px;
  "
>
  <div class="homepage-hero-carousel__wrapper">
    {% if section.blocks.size > 0 %}
      <div class="swiper-container homepage-hero-carousel__swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide homepage-hero-carousel__slide" {{ block.shopify_attributes }}>
              <div class="homepage-hero-carousel__slide-inner">
                <div
                  class="homepage-hero-carousel__content-column"
                  style="background-color: {{ section.settings.content_background_color }};"
                >
                  <div class="homepage-hero-carousel__content-wrapper">
                    {% if block.settings.reviews_text != blank %}
                      <div class="homepage-hero-carousel__reviews">
                        {% if block.settings.show_stars %}
                          <span class="homepage-hero-carousel__star-rating">
                            {% render 'icon-star' %}
                            {% render 'icon-star' %}
                            {% render 'icon-star' %}
                            {% render 'icon-star' %}
                            {% render 'icon-star' %}
                          </span>
                        {% endif %}
                        <p class="homepage-hero-carousel__reviews-text">{{ block.settings.reviews_text }}</p>
                      </div>
                    {% endif %}

                    {% if block.settings.headline != blank %}
                      <h2 class="homepage-hero-carousel__headline">{{ block.settings.headline }}</h2>
                    {% endif %}

                    {% if block.settings.description != blank %}
                      <div class="homepage-hero-carousel__description">{{ block.settings.description }}</div>
                    {% endif %}

                    <div class="homepage-hero-carousel__cta-buttons">
                      {% if block.settings.button1_link != blank and block.settings.button1_text != blank %}
                        <a
                          href="{{ block.settings.button1_link }}"
                          class="homepage-hero-carousel__button homepage-hero-carousel__button--primary"
                        >
                          {{ block.settings.button1_text }}
                          {% if block.settings.show_button1_arrow %}{% render 'icon-arrow-right' %}{% endif %}
                        </a>
                      {% endif %}
                      {% if block.settings.button2_link != blank and block.settings.button2_text != blank %}
                        <a
                          href="{{ block.settings.button2_link }}"
                          class="homepage-hero-carousel__button homepage-hero-carousel__button--secondary"
                        >
                          {% if block.settings.button2_icon != blank %}
                            {% assign button2_icon_img = block.settings.button2_icon %}
                            <img
                              src="{{ button2_icon_img | image_url: '20x20' }}"
                              alt="{{ button2_icon_img.alt | default: 'Button icon' }}"
                              class="homepage-hero-carousel__button-icon"
                              width="20"
                              height="20"
                              loading="lazy"
                            >
                          {% endif %}
                          {{ block.settings.button2_text }}
                        </a>
                      {% endif %}
                    </div>

                    <ul class="homepage-hero-carousel__feature-list">
                      {% if block.settings.feature_item_1 != blank %}
                        <li class="homepage-hero-carousel__feature-item">
                          {% render 'icon-checkmark' %}
                          {{ block.settings.feature_item_1 }}
                        </li>
                      {% endif %}
                      {% if block.settings.feature_item_2 != blank %}
                        <li class="homepage-hero-carousel__feature-item">
                          {% render 'icon-checkmark' %}
                          {{ block.settings.feature_item_2 }}
                        </li>
                      {% endif %}
                      {% if block.settings.feature_item_3 != blank %}
                        <li class="homepage-hero-carousel__feature-item">
                          {% render 'icon-checkmark' %}
                          {{ block.settings.feature_item_3 }}
                        </li>
                      {% endif %}
                      {% if block.settings.feature_item_4 != blank %}
                        <li class="homepage-hero-carousel__feature-item">
                          {% render 'icon-checkmark' %}
                          {{ block.settings.feature_item_4 }}
                        </li>
                      {% endif %}
                    </ul>
                  </div>
                </div>

                <div class="homepage-hero-carousel__image-column">
                  {% assign desktop_image = block.settings.slide_image_desktop %}
                  {% assign mobile_image = block.settings.slide_image_mobile %}

                  {% if desktop_image != blank or mobile_image != blank %}
                    {% if mobile_image != blank %}
                      <source
                        media="(max-width: 767px)"
                        srcset="{{ mobile_image | image_url: width: 767 }}"
                        alt="{{ mobile_image.alt | escape | default: block.settings.mobile_image_alt }}"
                      >
                    {% endif %}
                    <div 
                      class="homepage-hero-carousel__image-column" 
                      style="background-image: url({{ desktop_image | image_url: width: 1400 }});">
                    </div>
                    {% comment %} <picture>
                      {% if mobile_image != blank %}
                        <source
                          media="(max-width: 767px)"
                          srcset="{{ mobile_image | image_url: width: 767 }}"
                          alt="{{ mobile_image.alt | escape | default: block.settings.mobile_image_alt }}"
                        >
                      {% endif %}
                      <img
                        class="homepage-hero-carousel__image"
                        src="{{ desktop_image | image_url: width: 1400 }}"
                        alt="{{ desktop_image.alt | escape | default: block.settings.desktop_image_alt }}"
                        width="{{ desktop_image.width }}"
                        height="{{ desktop_image.height }}"
                        loading="lazy"
                      >
                    </picture> {% endcomment %}
                  {% else %}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        {% if section.settings.show_navigation_arrows %}
          <button class="carousel-arrow arrow-left margin-left-50">❮</button>
          <button class="carousel-arrow arrow-right margin-right-50">❯</button>
        {% endif %}
        {% comment %} {% if section.settings.show_pagination_dots %}
          <div class="swiper-pagination homepage-hero-carousel__pagination"></div>
        {% endif %} {% endcomment %}
      </div>
    {% else %}
      <div class="placeholder-content">
        {{ 'no_content' | t }}
      </div>
    {% endif %}
  </div>
</section>

<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer="defer"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carouselElement = document.querySelector('.homepage-hero-carousel__swiper');
    if (carouselElement) {
      const swiper = new Swiper(carouselElement, {
        loop: {{ section.settings.enable_loop }},
        autoplay: {{ section.settings.enable_autoplay }} ? {
          delay: {{ section.settings.autoplay_speed }},
          disableOnInteraction: false,
        } : false,
        speed: 800,
        grabCursor: true,

        pagination: {
          el: '.homepage-hero-carousel__pagination',
          clickable: true,
        },

        navigation: {
          nextEl: '.carousel-arrow.arrow-right',
          prevEl: '.carousel-arrow.arrow-left',
        },

        a11y: {
          enabled: true,
          prevSlideMessage: 'Previous slide',
          nextSlideMessage: 'Next slide',
          firstSlideMessage: 'This is the first slide',
          lastSlideMessage: 'This is the last slide',
          paginationBulletMessage: '{% raw %}Go to slide {{index}}{% endraw %}',
        },
      });
    }
  });
</script>

