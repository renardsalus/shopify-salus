<style>
  .celebrity-testimonials {
    padding: 40px 100px;
    text-align: center;
  }

  .celebrity-testimonials__header {
    margin-bottom: 40px;
    padding: 0 15px;
  }

  .celebrity-testimonials__subheading {
    font-size: 14px;
    font-weight: 600;
    color: #555;
    margin-bottom: 10px;
  }

  .celebrity-testimonials__heading {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .celebrity-testimonials__grid {
    display: grid;
    gap: 20px;
    margin: 0 auto;
    max-width: var(--page-width, 1400px);
    padding: 0 15px;
  }

  .testimonial-card {
    background-color: #fff;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    text-align: left;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  }

  .testimonial-card__media-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: 10px
  }

  .testimonial-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 2; /* Thumbnail image over video initially */
    transition: opacity 0.3s ease;
  }

  .testimonial-card__play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 3; /* Play button over everything initially */
    border: none;
    transition: background-color 0.2s ease, opacity 0.3s ease;
  }

  .testimonial-card__play-button:hover {
    background-color: rgba(255, 255, 255, 1);
  }

  .testimonial-card__play-button svg {
    width: 24px;
    height: 24px;
    fill: #000;
  }

  /* Styling for video playing directly in card */
  .testimonial-card__media-wrapper video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block; /* Always takes up space */
    z-index: 1; /* Below image and button initially */
    opacity: 0; /* Hidden by default, shown when playing */
    transition: opacity 0.3s ease;
  }

  /* State when video is playing */
  .testimonial-card__media-wrapper.is-playing .testimonial-card__image,
  .testimonial-card__media-wrapper.is-playing .testimonial-card__play-button {
    opacity: 0;
    pointer-events: none; /* Disable interaction with hidden elements */
  }

  .testimonial-card__media-wrapper.is-playing video {
    opacity: 1;
    z-index: 4; /* Bring video to front when playing */
  }

  .testimonial-card__content {
    padding: 15px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .testimonial-card__stars {
    display: flex;
    gap: 2px;
    margin-bottom: 10px;
    height: 20px;
  }

  .testimonial-card__stars svg {
    width: 16px;
    height: 16px;
    fill: #FFC107;
  }

  .testimonial-card__quote {
    font-style: italic;
    font-size: 15px;
    line-height: 1.4;
    color: #333;
    margin-bottom: 10px;
  }

  .testimonial-card__name {
    font-weight: 600;
    margin-top: auto;
    margin-bottom: 5px;
  }

  .testimonial-card__description {
    font-size: 13px;
    color: #777;
  }

  .celebrity-testimonials__button-wrapper {
    margin-top: 40px;
    text-align: center;
  }

  .button {
    display: inline-block;
    padding: 12px 30px;
    background-color: #fff;
    color: #000;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    border: 1px solid #000;
  }

  .button:hover {
    background-color: #eee;
    color: #000;
    border-color: #000;
  }

  /* Responsive Grid Settings - Mobile First */
  .celebrity-testimonials__grid {
    grid-template-columns: repeat({{ section.settings.mobile_cards_per_row }}, 1fr);
  }

  /* Tablet */
  @media screen and (min-width: 768px) {
    .celebrity-testimonials__grid {
      grid-template-columns: repeat({{ section.settings.tablet_cards_per_row }}, 1fr);
    }
  }

  /* Desktop */
  @media screen and (min-width: 1024px) {
    .celebrity-testimonials__grid {
      grid-template-columns: repeat({{ section.settings.desktop_cards_per_row }}, 1fr);
    }
  }
  @media screen and (max-width: 768px) {
    .celebrity-testimonials {
      padding: 20px 8px;
    }
  }
</style>

<div class="celebrity-testimonials">
  <div class="celebrity-testimonials__header">
    {% if section.settings.subheading != blank %}
      <div class="celebrity-testimonials__subheading">{{ section.settings.subheading }}</div>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h2 class="celebrity-testimonials__heading">{{ section.settings.heading }}</h2>
    {% endif %}
  </div>

  {% if section.blocks.size > 0 %}
    <div class="celebrity-testimonials__grid">
      {% for block in section.blocks limit: 10 %}
        {% assign card_image = null %}
        {% assign is_video_card = false %}
        {% assign card_alt_text = block.settings.name %}
        {% assign media_wrapper_padding = '100%' %}

        {% if block.type == 'static-testimonial-card' %}
          {% assign card_image = block.settings.image %}
          {% assign card_alt_text = block.settings.image.alt | default: block.settings.name %}
        {% elsif block.type == 'video-testimonial-card' %}
          {% if block.settings.video_file != blank %}
            {% assign is_video_card = true %}

            {# Prioritize custom thumbnail, fallback to auto-generated preview_image #}
            {% if block.settings.custom_thumbnail_image != blank %}
              {% assign card_image = block.settings.custom_thumbnail_image %}
              {% assign card_alt_text = block.settings.custom_thumbnail_image.alt | default: block.settings.name %}
            {% else %}
              {% assign card_image = block.settings.video_file.preview_image %}
              {% assign card_alt_text = block.settings.video_file.preview_image.alt | default: block.settings.name %}
            {% endif %}

            {% if block.settings.video_file.aspect_ratio %}
              {% assign media_wrapper_padding = 1
                | divided_by: block.settings.video_file.aspect_ratio
                | times: 100
                | append: '%'
              %}
            {% endif %}
          {% endif %}
        {% endif %}

        <div class="testimonial-card" {{ block.shopify_attributes }}>
          <div class="testimonial-card__media-wrapper" style="padding-bottom: {{ media_wrapper_padding }};">
            {% if card_image != blank %}
              <img
                class="testimonial-card__image"
                src="{{ card_image | image_url: width: 300 }}"
                srcset="
                  {{ card_image | image_url: width: 300 }} 300w,
                  {{ card_image | image_url: width: 500 }} 500w,
                  {{ card_image | image_url: width: 700 }} 700w,
                  {{ card_image | image_url: width: 1000 }} 1000w
                "
                sizes="
                  (min-width: 1024px) calc( (var(--page-width, 1400px) - 90px) / {{ section.settings.desktop_cards_per_row }}),
                  (min-width: 768px) calc( (100vw - 60px) / {{ section.settings.tablet_cards_per_row }}),
                  calc(100vw - 30px)
                "
                alt="{{ card_alt_text }}"
                loading="lazy"
                width="{{ card_image.width }}"
                height="{{ card_image.height }}"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'testimonial-card__image' }}
            {% endif %}

            {% if is_video_card and block.settings.video_file != blank %}
              {{
                block.settings.video_file
                | video_tag:
                  poster: card_image,
                  autoplay: false,
                  controls: true,
                  muted: true,
                  playsinline: true,
                  class: 'testimonial-card__inline-video'
              }}
              <button
                class="testimonial-card__play-button"
                aria-label="Play video by {{ block.settings.name | escape }}"
              >
                <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </button>
            {% endif %}
          </div>

          <div class="testimonial-card__content">
            {% if block.type == 'static-testimonial-card' %}
              <div class="testimonial-card__stars">
                {% for i in (1..5) %}
                  {% render 'icon-star' %}
                {% endfor %}
              </div>
              {% if block.settings.quote != blank %}
                <p class="testimonial-card__quote">{{ block.settings.quote }}</p>
              {% endif %}
            {% endif %}
            <p class="testimonial-card__name">{{ block.settings.name }}</p>
            {% if block.settings.description != blank %}
              <p class="testimonial-card__description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.blocks.size > 10 and section.settings.button_link != blank %}
      <div class="celebrity-testimonials__button-wrapper">
        <a href="{{ section.settings.button_link }}" class="button">{{ section.settings.button_text }}</a>
      </div>
    {% endif %}
  {% else %}
    <p>Please add testimonial cards to this section.</p>
  {% endif %}
</div>

<script>
  (function () {
    const playButtons = document.querySelectorAll('.testimonial-card__play-button');
    let currentPlayingVideo = null; // Tracks the <video> element currently playing

    playButtons.forEach((button) => {
      // Find the video element associated with this button, once per button
      const mediaWrapper = button.closest('.testimonial-card__media-wrapper');
      const videoElement = mediaWrapper.querySelector('.testimonial-card__inline-video');

      // Attach event listeners for video pause/ended, once per video element
      if (videoElement) {
        videoElement.addEventListener('pause', () => {
          mediaWrapper.classList.remove('is-playing');
          if (currentPlayingVideo === videoElement) {
            currentPlayingVideo = null;
          }
        });
        videoElement.addEventListener('ended', () => {
          mediaWrapper.classList.remove('is-playing');
          if (currentPlayingVideo === videoElement) {
            currentPlayingVideo = null;
          }
        });
      }

      // Attach the click listener to the play button
      button.addEventListener('click', () => {
        if (!videoElement) {
          console.error('Video element not found in card associated with play button.');
          return;
        }

        // If this is the video currently playing, toggle pause/play
        if (currentPlayingVideo === videoElement) {
          if (videoElement.paused) {
            videoElement.play();
            mediaWrapper.classList.add('is-playing');
          } else {
            videoElement.pause();
            mediaWrapper.classList.remove('is-playing');
          }
          return;
        }

        // Pause any other currently playing video
        if (currentPlayingVideo && !currentPlayingVideo.paused) {
          currentPlayingVideo.pause();
          currentPlayingVideo.closest('.testimonial-card__media-wrapper').classList.remove('is-playing');
        }

        // Play the new video
        videoElement
          .play()
          .then(() => {
            mediaWrapper.classList.add('is-playing');
            currentPlayingVideo = videoElement;
          })
          .catch((error) => {
            console.error('Video play failed:', error);
            // If autoplay fails, ensure the card state is correct (showing thumbnail)
            mediaWrapper.classList.remove('is-playing');
            currentPlayingVideo = null;
          });
      });
    });
  })();
</script>

