{% comment %}
  Section: Celebrity Testimonials
  Description: Displays testimonials from athletes and figures with optional videos.
{% endcomment %}

<style>
  .celebrity-testimonials {
    padding: 40px 0;
    text-align: center;
  }

  .celebrity-testimonials__header {
    margin-bottom: 40px;
    padding: 0 15px;
  }

  .celebrity-testimonials__subheading {
    font-size: 14px;
    font-weight: 600;
    color: #555;
    margin-bottom: 10px;
  }

  .celebrity-testimonials__heading {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .celebrity-testimonials__grid {
    display: grid;
    gap: 20px;
    margin: 0 auto;
    max-width: var(--page-width, 1400px); /* Adjust as needed */
    padding: 0 15px;
  }

  .testimonial-card {
    background-color: #fff;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    text-align: left;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  }

  .testimonial-card__media-wrapper {
    position: relative;
    padding-bottom: 100%; /* 1:1 Aspect Ratio */
    overflow: hidden;
  }

  .testimonial-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonial-card__play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    border: none;
  }

  .testimonial-card__play-button svg {
    width: 24px;
    height: 24px;
    fill: #000;
  }

  .testimonial-card__content {
    padding: 15px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .testimonial-card__stars {
    margin-bottom: 10px;
    height: 16px; /* Adjust height based on SVG size */
    width: 80px; /* Adjust width based on SVG size */
  }

  .testimonial-card__quote {
    font-style: italic;
    font-size: 15px;
    line-height: 1.4;
    color: #333;
    margin-bottom: 10px;
  }

  .testimonial-card__name {
    font-weight: 600;
    margin-top: auto; /* Pushes name/desc to bottom */
    margin-bottom: 5px;
  }

  .testimonial-card__description {
    font-size: 13px;
    color: #777;
  }

  .celebrity-testimonials__button-wrapper {
    margin-top: 40px;
    text-align: center;
  }

  .button {
    display: inline-block;
    padding: 12px 30px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    border: 1px solid #000;
  }

  .button:hover {
    background-color: #333;
    color: #fff;
  }

  /* Video Modal Styling */
  .video-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    visibility: hidden;
    opacity: 0;
    transition: opacity 0.3s ease, visibility 0s linear 0.3s;
  }

  .video-modal.is-active {
    visibility: visible;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .video-modal__content {
    position: relative;
    width: 90%;
    max-width: 900px; /* Max width for video */
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    background-color: #000;
    border-radius: 8px;
    overflow: hidden;
  }

  .video-modal__content iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .video-modal__close {
    position: absolute;
    top: -30px; /* Position outside the video content */
    right: -30px;
    background: none;
    border: none;
    color: #fff;
    font-size: 30px;
    cursor: pointer;
    z-index: 10000;
  }
  @media (max-width: 767px) {
    .video-modal__close {
      top: 10px;
      right: 10px;
      font-size: 24px;
      text-shadow: 0 0 5px rgba(0,0,0,0.5);
    }
  }

  /* Responsive Grid Settings */
  /* Mobile: 1 card per row (default) */
  .celebrity-testimonials__grid {
    grid-template-columns: repeat({{ section.settings.mobile_cards_per_row }}, 1fr);
  }

  /* Tablet */
  @media screen and (min-width: 768px) {
    .celebrity-testimonials__grid {
      grid-template-columns: repeat({{ section.settings.tablet_cards_per_row }}, 1fr);
    }
  }

  /* Desktop */
  @media screen and (min-width: 1024px) {
    .celebrity-testimonials__grid {
      grid-template-columns: repeat({{ section.settings.desktop_cards_per_row }}, 1fr);
    }

    /* Hide cards beyond the 10th on desktop only */
    {%- assign desktop_limit = 10 -%}
    {% if section.blocks.size > desktop_limit %}
      .celebrity-testimonials__grid .testimonial-card:nth-child(n + {{ desktop_limit | plus: 1 }}) {
        display: none;
      }
    {% endif %}
  }
</style>

<div class="celebrity-testimonials">
  <div class="celebrity-testimonials__header">
    {% if section.settings.subheading != blank %}
      <div class="celebrity-testimonials__subheading">{{ section.settings.subheading }}</div>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h2 class="celebrity-testimonials__heading">{{ section.settings.heading }}</h2>
    {% endif %}
  </div>

  {% if section.blocks.size > 0 %}
    <div class="celebrity-testimonials__grid">
      {% for block in section.blocks %}
        <div class="testimonial-card" {{ block.shopify_attributes }}>
          <div class="testimonial-card__media-wrapper">
            {% if block.settings.image != blank %}
              <img
                class="testimonial-card__image"
                src="{{ block.settings.image | image_url: width: 300 }}"
                {#
                Optimized
                src
                for
                initial
                load
                #}
                srcset="
                  {{ block.settings.image | image_url: width: 300 }} 300w,
                  {{ block.settings.image | image_url: width: 500 }} 500w,
                  {{ block.settings.image | image_url: width: 700 }} 700w,
                  {{ block.settings.image | image_url: width: 1000 }} 1000w
                "
                sizes="
                  (min-width: 1024px) calc( (var(--page-width, 1400px) - 90px) / {{ section.settings.desktop_cards_per_row }}),
                  (min-width: 768px) calc( (100vw - 60px) / {{ section.settings.tablet_cards_per_row }}),
                  calc(100vw - 30px)
                "
                alt="{{ block.settings.image.alt | default: block.settings.name }}"
                loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'testimonial-card__image' }}
            {% endif %}

            {% if block.settings.video_url != blank %}
              <button
                class="testimonial-card__play-button"
                data-video-url="{{ block.settings.video_url }}"
                aria-label="Play video by {{ block.settings.name | escape }}"
              >
                <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </button>
            {% endif %}
          </div>

          <div class="testimonial-card__content">
            {% if block.settings.video_url == blank %}
              <div class="testimonial-card__stars">{% render 'icon-star' %}</div>
              {% if block.settings.quote != blank %}
                <p class="testimonial-card__quote">{{ block.settings.quote }}</p>
              {% endif %}
            {% endif %}
            <p class="testimonial-card__name">{{ block.settings.name }}</p>
            {% if block.settings.description != blank %}
              <p class="testimonial-card__description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.blocks.size > 10 and section.settings.button_link != blank %}
      <div class="celebrity-testimonials__button-wrapper">
        <a href="{{ section.settings.button_link }}" class="button">{{ section.settings.button_text }}</a>
      </div>
    {% endif %}
  {% else %}
    <p>Please add testimonial cards to this section.</p>
  {% endif %}
</div>

<div class="video-modal" role="dialog" aria-modal="true" aria-hidden="true">
  <div class="video-modal__content">
    <button class="video-modal__close" aria-label="Close video player">&times;</button>
    <div class="video-modal__iframe-container"></div>
  </div>
</div>

<script>
  // IIFE for scope isolation
  (function () {
    const videoModal = document.querySelector('.video-modal');
    const modalCloseButton = videoModal.querySelector('.video-modal__close');
    const iframeContainer = videoModal.querySelector('.video-modal__iframe-container');
    const playButtons = document.querySelectorAll('.testimonial-card__play-button');

    function getEmbedUrl(url) {
      if (!url) return '';
      let embedUrl = '';
      const youtubeMatch = url.match(
        /(?:https?:\/\/)?(?:www\.)?(?:youtube\.com|youtu\.be)\/(?:watch\?v=|embed\/|v\/|)([\w-]{11})(?:(?:\?|&).*)?/
      );
      const vimeoMatch = url.match(/(?:https?:\/\/)?(?:www\.)?(?:vimeo\.com)\/(?:video\/|)(\d+)(?:(?:\?|&).*)?/);

      if (youtubeMatch && youtubeMatch[1]) {
        embedUrl = `https://www.youtube-nocookie.com/embed/${youtubeMatch[1]}?autoplay=1&rel=0&showinfo=0&modestbranding=1`;
      } else if (vimeoMatch && vimeoMatch[1]) {
        embedUrl = `https://player.vimeo.com/video/${vimeoMatch[1]}?autoplay=1&title=0&byline=0&portrait=0`;
      }
      return embedUrl;
    }

    function openModal(videoUrl) {
      const embedUrl = getEmbedUrl(videoUrl);
      if (!embedUrl) return;

      iframeContainer.innerHTML = `<iframe src="${embedUrl}" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen title="Video player"></iframe>`;
      videoModal.classList.add('is-active');
      videoModal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden'; // Prevent scrolling body
      modalCloseButton.focus(); // Focus close button for accessibility
    }

    function closeModal() {
      videoModal.classList.remove('is-active');
      videoModal.setAttribute('aria-hidden', 'true');
      iframeContainer.innerHTML = ''; // Stop video playback
      document.body.style.overflow = ''; // Restore body scrolling
    }

    playButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const videoUrl = button.dataset.videoUrl;
        openModal(videoUrl);
      });
    });

    modalCloseButton.addEventListener('click', closeModal);

    // Close modal on escape key
    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && videoModal.classList.contains('is-active')) {
        closeModal();
      }
    });

    // Close modal when clicking outside the video content
    videoModal.addEventListener('click', (event) => {
      if (event.target === videoModal) {
        closeModal();
      }
    });
  })();
</script>

