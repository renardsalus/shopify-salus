{% comment %} ***** SECTION STATUS ***** {% endcomment %}
{% assign show_section = false %}
{% assign section_name = 'Model Compare' %}

{% if template.name == 'index'
  or template.name == 'collection'
  or template.name == 'blog'
  or template.name == 'page'
  or template.name == 'article'
%}
  {% assign show_section = true %}
{% endif %}
{% if template.name == 'product' and product.metafields.custom.product_sections != blank %}
  {% for value in product.metafields.custom.product_sections.value %}
    {% if value.section_name == section_name %}
      {% assign show_section = true %}
    {% endif %}
  {% endfor %}
{% endif %}
{% comment %} ***** SECTION STATUS ***** {% endcomment %}

{% if show_section %}
  <style>
    .sauna-compare
    {
      background-image:url({{ section.settings.bg-image | img_url:'master' }});
    }
  </style>

  <section class="sauna-compare">
    <div class="container">
      <div class="sauna-compare-title">
        {% if section.settings.title != blank %}
          <h2>{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings['button-text'] != blank %}
          <a href="{{ section.settings.link }}">{{ section.settings['button-text'] }}</a>
        {% endif %}
      </div>
      <div class="compare-sauna">
        {% for block in section.blocks %}
          {% if block.settings.image != blank %}
            <div class="saunaBox">
              <img src="{{ block.settings.image | img_url:'master' }}" alt="">
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Model Compare",
  "settings": [
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "bg-image",
      "label": "Add your background Image"
    }
  ],
  "blocks": [
    {
      "type": "blocks",
      "name": "blocks",
      "settings": [
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Add Your Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Model Compare"
    }
  ]
}
{% endschema %}
