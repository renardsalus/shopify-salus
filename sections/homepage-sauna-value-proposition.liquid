<style>
  .sauna-value-proposition-container {
    max-width: 1400px;
  }
  .sauna-value-proposition {
    padding: 60px 100px; /* Default padding, adjust via CSS */
    max-width: var(--page-width, 1400px);
    margin: 0 auto;
  }

  .sauna-value-proposition__inner {
    display: flex;
    flex-direction: column;
    gap: 40px; /* Gap between columns on mobile/stacked layout */
    padding: 0 15px; /* Side padding for mobile */
  }

  @media screen and (max-width: 768px) {
    .sauna-value-proposition {
      padding: 20px 8px;
    }
  }
  @media screen and (min-width: 768px) {
    .sauna-value-proposition__inner {
      flex-direction: row; /* Two columns on desktop/tablet */
      gap: 60px; /* Gap between columns on larger screens */
      align-items: center; /* Vertically align content in the middle */
    }
  }

  .sauna-value-proposition__content {
    flex-basis: 100%; /* Full width on mobile */
    max-width: 100%;
  }

  .sauna-value-proposition__media {
    flex-basis: 100%; /* Full width on mobile */
    max-width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center; /* Center image and badges */
    gap: 20px; /* Space between badges and image */
  }

  /* Desktop column ratio styling */
  @media screen and (min-width: 768px) {
    .sauna-value-proposition__content {
      flex-basis: {{ section.settings.desktop_column_ratio }}%;
      max-width: {{ section.settings.desktop_column_ratio }}%;
    }
    .sauna-value-proposition__media {
      flex-basis: {{ 100 | minus: section.settings.desktop_column_ratio }}%;
      max-width: {{ 100 | minus: section.settings.desktop_column_ratio }}%;
    }
  }

  @media screen and (max-width: 768px) {
    .sauna-value-proposition__badge:has(+ .sauna-value-proposition__image-wrapper) {
      display: None;
    }
  }z

  .sauna-value-proposition__heading {
    font-size: 38px;
    line-height: 1.2;
    font-weight: 700;
    margin-bottom: 20px;
    color: #000;
  }

  .sauna-value-proposition__heading span {
    display: block; /* Force asterisk to new line if part of default heading */
    color: #666; /* Example color for asterisk part */
    font-size: 0.8em; /* Smaller size for asterisk part */
  }

  .sauna-value-proposition__disclaimer {
    font-size: 14px;
    line-height: 1.5;
    color: #555;
    margin-bottom: 40px;
  }

  .sauna-feature-item {
    padding: 20px 0;
    border-bottom: 1px solid #ddd;
  }

  .sauna-feature-item:last-of-type {
    border-bottom: none; /* No border on the last item */
  }

  .sauna-feature-item__title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 5px;
    color: #000;
  }

  .sauna-feature-item__financing {
    font-size: 14px;
    color: #777;
    display: flex;
    align-items: center;
  }

  .sauna-feature-item__financing img {
    height: 14px; /* Adjust Affirm logo size */
    margin-left: 5px;
    vertical-align: middle;
  }

  .sauna-value-proposition__button {
    display: inline-flex; /* Use flex for button content */
    align-items: center;
    gap: 10px;
    padding: 15px 30px;
    background-color: #1a4d36; /* Dark green background */
    color: #fff;
    text-decoration: none;
    border-radius: 6px; /* Rounded corners */
    font-weight: 600;
    transition: background-color 0.3s ease;
    margin-top: 30px;
  }

  .sauna-value-proposition__button:hover {
    background-color: #123d29; /* Darker green on hover */
  }

  .sauna-value-proposition__button svg {
    width: 16px;
    height: 16px;
    fill: currentColor; /* Inherit color from button text */
  }

  .sauna-value-proposition__badge {
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 10px 20px;
    text-align: center;
    font-size: 14px;
    color: #333;
    background-color: #f8f8f8;
    width: fit-content; /* Adjusts to content width */
    max-width: 100%; /* Prevents overflow */
  }

  .sauna-value-proposition__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 60%; /* Example aspect ratio, adjust as needed or use natural */
    height: 0;
    overflow: hidden;
  }

  .sauna-value-proposition__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain; /* Ensure image is fully visible without cropping */
    display: block;
  }

  .display-mobile-no-desktop {
    display: None !important;
  }

  .display-desktop-no-mobile {
    display: flex !important;
  }

  @media screen and (max-width: 768px) {
    .display-mobile-no-desktop {
      display: flex !important;
    }

    .display-desktop-no-mobile {
      display: None !important;
    }
  }
  .sauna-feature-item__financing .custom-affirm {
    text-align: left;
  }
</style>

<div class="sauna-value-proposition-container mx-auto">
  <div class="sauna-value-proposition">
    <div class="sauna-value-proposition__inner">
      <div class="sauna-value-proposition__content">
        {% if section.settings.main_heading_text != blank %}
          <div class="sauna-value-proposition__heading">
            {{ section.settings.main_heading_text }}
          </div>
        {% endif %}

        {% if section.settings.disclaimer_text != blank %}
          <div class="sauna-value-proposition__disclaimer">
            {{ section.settings.disclaimer_text }}
          </div>
        {% endif %}

        <div class="sauna-value-proposition__media display-mobile-no-desktop">
          {% if section.settings.top_badge_text != blank %}
            <div class="sauna-value-proposition__badge">
              {{ section.settings.top_badge_text }}
            </div>
          {% endif %}

          {% if section.settings.composite_sauna_image != blank %}
            <div class="sauna-value-proposition__image-wrapper">
              <img
                src="{{ section.settings.composite_sauna_image | image_url: width: 800 }}"
                srcset="
                  {{ section.settings.composite_sauna_image | image_url: width: 400 }} 400w,
                  {{ section.settings.composite_sauna_image | image_url: width: 600 }} 600w,
                  {{ section.settings.composite_sauna_image | image_url: width: 800 }} 800w
                "
                sizes="(min-width: 768px) calc({{ 100 | minus: section.settings.desktop_column_ratio }}vw - 90px), calc(100vw - 30px)"
                alt="{{ section.settings.composite_sauna_image.alt | default: 'Saunas' }}"
                loading="lazy"
                class="sauna-value-proposition__image"
                width="{{ section.settings.composite_sauna_image.width }}"
                height="{{ section.settings.composite_sauna_image.height }}"
              >
            </div>
          {% else %}
            <div class="sauna-value-proposition__image-wrapper">
              {{ 'image' | placeholder_svg_tag: 'sauna-value-proposition__image' }}
            </div>
          {% endif %}

          {% if section.settings.bottom_badge_text != blank %}
            <div class="sauna-value-proposition__badge">
              {{ section.settings.bottom_badge_text }}
            </div>
          {% endif %}
        </div>

        <div class="sauna-feature-list">
          {% for block in section.blocks %}
            {% if block.type == 'sauna-feature-item' %}
              <div class="sauna-feature-item" {{ block.shopify_attributes }}>
                {% if block.settings.featured_product != blank %}
                  <h3 class="sauna-feature-item__title">
                    {{ block.settings.featured_product.title }}
                  </h3>
                  <div class="sauna-feature-item__financing">
                    {% render 'affirm-messaging', product: block.settings.featured_product %}
                  </div>
                {% else %}
                  <h3 class="sauna-feature-item__title">Placeholder Product Title</h3>
                  <div class="sauna-feature-item__financing">Starting at $XXX/mo or 0% APR with Affirm financing.</div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>

        {% if section.settings.button_text != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="sauna-value-proposition__button">
            {{ section.settings.button_text }}
            {% render 'icon-arrow-right' %} {# Assumes an icon-arrow-right snippet exists #}
          </a>
        {% endif %}
      </div>

      <div class="sauna-value-proposition__media display-desktop-no-mobile">
        {% if section.settings.top_badge_text != blank %}
          <div class="sauna-value-proposition__badge">
            {{ section.settings.top_badge_text }}
          </div>
        {% endif %}

        {% if section.settings.composite_sauna_image != blank %}
          <div class="sauna-value-proposition__image-wrapper">
            <img
              src="{{ section.settings.composite_sauna_image | image_url: width: 800 }}"
              srcset="
                {{ section.settings.composite_sauna_image | image_url: width: 400 }} 400w,
                {{ section.settings.composite_sauna_image | image_url: width: 600 }} 600w,
                {{ section.settings.composite_sauna_image | image_url: width: 800 }} 800w
              "
              sizes="(min-width: 768px) calc({{ 100 | minus: section.settings.desktop_column_ratio }}vw - 90px), calc(100vw - 30px)"
              alt="{{ section.settings.composite_sauna_image.alt | default: 'Saunas' }}"
              loading="lazy"
              class="sauna-value-proposition__image"
              width="{{ section.settings.composite_sauna_image.width }}"
              height="{{ section.settings.composite_sauna_image.height }}"
            >
          </div>
        {% else %}
          <div class="sauna-value-proposition__image-wrapper">
            {{ 'image' | placeholder_svg_tag: 'sauna-value-proposition__image' }}
          </div>
        {% endif %}

        {% if section.settings.bottom_badge_text != blank %}
          <div class="sauna-value-proposition__badge">
            {{ section.settings.bottom_badge_text }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Sauna Value Proposition",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content - Left Column"
    },
    {
      "type": "richtext",
      "id": "main_heading_text",
      "label": "Main Heading",
      "default": "<h2>Get started with your sauna journey for less than $4/day*</h2>",
      "info": "Use richtext for bolding and styling, e.g., for the asterisk."
    },
    {
      "type": "richtext",
      "id": "disclaimer_text",
      "label": "Disclaimer / Sub-heading",
      "default": "<p>*Our saunas start at $105/mo or 0% APR with Affirm financing.</p>",
      "info": "Use richtext for Affirm logo/link HTML if needed."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Call to Action Button Text",
      "default": "Shop Best Value Saunas"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Call to Action Button Link"
    },
    {
      "type": "header",
      "content": "Content - Right Column"
    },
    {
      "type": "text",
      "id": "top_badge_text",
      "label": "Top Badge Text",
      "default": "Best Value Picks – Includes FREE shipping + Warranty | $1000s in Value!"
    },
    {
      "type": "image_picker",
      "id": "composite_sauna_image",
      "label": "Composite Sauna Image",
      "info": "Upload a single image showing multiple saunas."
    },
    {
      "type": "text",
      "id": "bottom_badge_text",
      "label": "Bottom Badge Text",
      "default": "Best Value Picks – Includes FREE shipping + Warranty"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "desktop_column_ratio",
      "min": 20,
      "max": 80,
      "step": 10,
      "unit": "%",
      "label": "Left Column Width (Desktop)",
      "default": 50,
      "info": "Percentage width for the left content column on desktop. Right column will take remaining width."
    }
  ],
  "blocks": [
    {
      "type": "sauna-feature-item",
      "name": "Sauna Feature Item",
      "settings": [
        {
          "type": "product",
          "id": "featured_product",
          "label": "Select Product",
          "info": "Select a product to display its title and price for financing details."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sauna Value Proposition",
      "blocks": [
        {
          "type": "sauna-feature-item"
        },
        {
          "type": "sauna-feature-item"
        },
        {
          "type": "sauna-feature-item"
        }
      ]
    }
  ]
}
{% endschema %}
