<style>
      /* Popup overlay */
      .salesPopup-overlay {
          display: none;
          /* Hidden by default */
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-color: rgba(0, 0, 0, 0.5);
          z-index:100;
      }

      /* Popup content */
      .salesPopup-content {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          background-color: white;
          border-radius: 5px;
          box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
          width:100%;
          max-width:820px;
          height:100%;
          max-height:450px;
          border-radius:15px;
          transition: transform 0.3s ease;
      }
      .salesPopup-content-row {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        height:100%;
        overflow:hidden;
        border-radius:15px;
      }

      #salesPopup-close {
          position: absolute;
          top: 10px;
          right: 15px;
          font-size: 30px;
          cursor: pointer;
      }
      .salesPopup-media{
        height: 100%;
        background: #FBF2E9;
      }
      .salesPopup-media img {
        display: block;
        height: 100%;
        width: 100%;
        border-top-right-radius:15px;
        border-bottom-right-radius:15px;
        object-fit:cover;
    }
    .salesPopup-info{
      padding:28px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin:0px 20px;
    }
    .salesPopup-info h2{
      font-family: Poppins;
      font-size: 32px;
      font-weight: 600;
      line-height: 42px;
      text-align:center;
      color:#000;
      margin-bottom:20px;
    }
    .salesPopup-info p {
      /* font-family: Poppins; */
      font-size: 18px;
      font-weight: 300;
      line-height: 27px;
      text-align: center;
      color: #000000;
      margin-bottom:0;
  }
  .salesPopup-info a.btn{
    display:block;
    background:#1B413E;
    width:100%;
    padding:10px 20px;
    font-size: 18px;
    font-weight: 600;
    line-height: 27px;
    border-radius:6px;
    margin-top:40px;
  }
  @media only screen and (max-width:768px){
    .salesPopup-content{
      max-width:92%;
    }
    .salesPopup-info{
        margin: 0 0 0 10px;
        padding: 20px 0px 20px 20px;
    }
    .salesPopup-info h2{
      font-size:28px;
      line-height:36px;
    }
  }
  @media only screen and (max-width:600px){
    .salesPopup-info h2{
      font-size:24px;
      line-height:32px;
    }
    .salesPopup-info p{
      font-size:16px;
      line-height:24px;
      font-weight:400;
    }
    .salesPopup-info{
      padding:30px;
      margin:0;
      height:100%;
      border-radius:10px;
    }
    .salesPopup-content{
      border-radius:10px;
    }
    {% if popup.image != blank and popup.mobile_bg %}
      .salesPopup-content{
        background-image:url("{{ popup.image | img_url:'master' }}");
        background-size:cover;
        background-repeat:no-repeat;
        background-position:center;
      }
      .salesPopup-info{
        background:rgba({{popup.color.rgb | replace:' ',','}},0.85);
      }
    {% endif %}
    .salesPopup-content-row{
      grid-template-columns:100%;
      align-items:center;
    }

    .salesPopup-media{
      display:none;
    }
    .salesPopup-info a.btn {
      padding: 7px 10px;
      font-size: 16px;
      line-height: 24px;
      margin-top: 30px;
    }
  }
</style>
<div id="salesPopup" class="salesPopup-overlay">
  <div class="salesPopup-content">
    <span id="salesPopup-close" class="close">&times;</span>
    <div class="salesPopup-content-row">
      <div class="salesPopup-info">
        <h2>{{ popup.heading }}</h2>
        {{ popup.content }}
        {% if popup.button_label != blank %}
          <a class="btn btn--primary" href="{{ popup.button_link }}">
            {{ popup.button_label }}
          </a>
        {% endif %}
      </div>
      <div class="salesPopup-media">
        {% if popup.image != blank %}
          <img src="{{ popup.image | img_url:'master' }}" alt="{{ popup.image.alt }}">
        {% else %}
          {{ 'product-1' | placeholder_svg_tag }}
        {% endif %}
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', ()=>{
    let popup = document.getElementById("salesPopup");
     document.getElementById("salesPopup-close").addEventListener("click", function () {
       setTimeout(function () {
        popup.style.display = "none";
       }, 300);
    });
    setTimeout(function () {
        popup.style.display = "block";
    }, 10);

    // window.addEventListener("click", function (event) {
    //     if (event.target == document.getElementById("salesPopup")) {
    //         popup.style.display = "none";
    //     }
    // });
  });
</script>
