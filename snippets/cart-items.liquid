{%- comment -%}
  Parameters:
  - is_drawer {Boolean} - Is cart drawer.

  Usage:
  {% render 'cart-items', is_drawer: true %}
{%- endcomment -%}

{%- if cart != empty -%}
  <script src="{{ 'cart-items.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- liquid
  if is_drawer
    assign section_id = 'cart-drawer'
  else
    assign section_id = section.id
  endif
-%}

<cart-items
  id="cart-items"
  data-section="{{ section_id }}"
  data-empty="{% if cart == empty %}true{% else %}false{% endif %}"
>
  {%- if cart == empty -%}
    <div class="cart-empty flex flex-col justify-center items-center h-full js-cart-empty">
      {%- if settings.cart_icon == 'bag' -%}
        {%- render 'icon-bag' -%}
      {%- elsif settings.cart_icon == 'basket' -%}
        {%- render 'icon-basket' -%}
      {%- else -%}
        {%- render 'icon-cart' -%}
      {%- endif -%}

      <p>{{ 'cart.general.empty' | t }}</p>

      {%- if settings.cart_empty_shop_link -%}
        <a class="btn btn--primary" href="{{ settings.cart_empty_shop_link }}">
          {{- 'cart.general.start_shopping' | t -}}
        </a>
      {%- endif -%}
    </div>
  {%- endif -%}

  {%- if cart != empty -%}
    <div id="page-loading-overlay" class="loading-overlay hidden">
      <div class="loading-spinner"></div>
    </div>
    
    <table class="cart-items w-full">
      <thead class="visually-hidden">
        <tr>
          <th colspan="2">{{ 'cart.items.product' | t }}</th>
          <th>{{ 'cart.items.price' | t }}</th>
          <th>{{ 'cart.items.quantity' | t }}</th>
        </tr>
      </thead>
      <tbody>
        {%- for item in cart.items -%}
          {%- liquid
            if item.variant.compare_at_price > item.variant.price
              assign variant_price_reduced = true
            else
              assign variant_price_reduced = false
            endif
          -%}
          <tr
            class="cart-item grid gap-x-6 {% if item.price == 0 %}freebies{% endif %}"
            id="cart-item-{{ item.index | plus: 1 }}"
            data-product-id="{{ item.product_id }}"
            data-variant-id="{{ item.variant_id }}"
          >
            <td class="cart-item__image">
              <a href="{{ item.url }}" class="block {% if settings.blend_product_images %} image-blend{% endif %}">
                {%- if item.image -%}
                  {%- capture sizes -%}
                    {%- render 'sizes-attribute', min: '64px', sm: '128px', md: false, lg: false, xl: false, max: false -%}
                  {%- endcapture -%}
                  {{
                    item.image
                    | image_url: width: 180
                    | image_tag: widths: '64, 128, 180', sizes: sizes, loading: 'lazy'
                  }}
                {%- else -%}
                  <div class="media relative" style="padding-top: 100%;">
                    {{ 'image' | placeholder_svg_tag: 'media__placeholder img-fit' }}
                  </div>
                {%- endif -%}
              </a>
            </td>
            <td class="cart-item__details">
              {%- if section.settings.show_vendor and item.vendor != blank -%}
                <div class="text-theme-light text-sm mb-2">
                  {{ item.vendor }}
                </div>
              {%- endif -%}
              {% if item.properties and item.properties['_gpo_parent_product_group'] %}
                <span class="cart-item__title m-0 font-bold text-current js-item-name" href="{{ item.url }}">
                  {{- item.product.title | escape -}}
                </span>
              {%  else %}
                <a class="cart-item__title m-0 font-bold text-current js-item-name" href="{{ item.url }}">
                  {{- item.product.title | escape -}}
                </a>
              {% endif %}

              {%- if settings.cart_show_weight and item.variant.weight > 0 -%}
                <div class="cart-item__weight text-sm mt-2">
                  {{ item.variant.weight | weight_with_unit: item.variant.weight_unit }}
                </div>
              {%- endif -%}

              <div class="cart-item__info">
                {%- if variant_price_reduced or item.original_line_price != item.final_line_price -%}
                  <dl class="m-0">
                    <dt class="visually-hidden">
                      {{- 'products.product.price.sale_price' | t -}}
                    </dt>
                    <dd class="price__current inline m-0 font-bold">
                      {%- render 'price-as-money', price: item.final_price, show_money_with_currency: false -%}
                    </dd>
                    <dt class="visually-hidden">
                      {{- 'products.product.price.regular_price' | t -}}
                    </dt>
                    <dd class="inline m-0">
                      {%- if variant_price_reduced -%}
                        <s class="price__was{% if settings.superscript_decimals %} price__was--supercents{% endif %}">
                          {%- render 'price-as-money',
                            price: item.variant.compare_at_price,
                            show_money_with_currency: false
                          -%}
                        </s>
                      {%- else -%}
                        <s class="price__was{% if settings.superscript_decimals %} price__was--supercents{% endif %}">
                          {%- render 'price-as-money', price: item.original_price, show_money_with_currency: false -%}
                        </s>
                      {%- endif -%}
                    </dd>
                  </dl>
                {%- else -%}
                  {% if item.price <= 0 %}
                    <strong class="price__current">Free - Included With Your Order</strong>

                  {% else %}
                    <strong class="price__current">
                      {%- render 'price-as-money', price: item.original_price, show_money_with_currency: false -%}
                    </strong>
                  {% endif %}
                {%- endif -%}

                {%- if item.unit_price_measurement -%}
                  <div class="unit-price">
                    <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                    <span class="unit-price__price">
                      {%- render 'price-as-money', price: item.unit_price, show_money_with_currency: false -%}
                    </span>
                    <span class="unit-price__separator">{{ 'products.product.price.unit_price_separator' | t }}</span>
                    <span class="unit-price__unit">
                      {%- if item.unit_price_measurement.reference_value != 1 -%}
                        {{- item.unit_price_measurement.reference_value -}}
                      {%- endif -%}
                      {{ item.unit_price_measurement.reference_unit }}
                    </span>
                  </div>
                {%- endif -%}

                {%- if item.product.template_suffix contains 'preorder' -%}
                  <div class="mt-2">
                    <span class="product-label product-label--preorder">
                      {% if settings.preorder_label_icon != 'none' %}
                        {% render 'icon', icon: settings.preorder_label_icon, width: 14, height: 14 %}
                      {% endif %}
                      {{- 'products.product.preorder' | t -}}
                    </span>
                  </div>
                {%- endif -%}

                <div class="item-options">
                  {% comment %}
                    <strong>test Options:</strong>
                    <ul>
                      {% for option in item.properties %}
                        <li>{{ option | first }}: {{ option | last }}</li>
                      {% endfor %}
                    </ul>
                  {% endcomment %}
                </div>
                {%- if item.product.has_only_default_variant == false
                  or item.properties.size != 0
                  or item.selling_plan_allocation != null
                -%}
                  <div class="cart-item__variants text-sm">
                    <dl class="mt-2 mb-0">
                      {%- if item.product.has_only_default_variant == false -%}
                        {%- for option in item.options_with_values -%}
                          <div>
                            <dt class="inline">
                              <strong>{{ option.name }}: </strong>
                            </dt>
                            <dd class="inline m-0">{{ option.value }}</dd>
                          </div>
                        {%- endfor -%}
                      {%- endif -%}

                      {%- for property in item.properties -%}
                        {%- assign property_first_char = property.first | slice: 0 -%}
                        {%- if property.last != blank and property_first_char != '_' -%}
                          <div>
                            <dt class="inline">
                              <strong>{{ property.first }}: </strong>
                            </dt>
                            <dd class="inline m-0">
                              {%- if property.last contains '/uploads/' -%}
                                <a href="{{ property.last }}" class="link" target="_blank">
                                  {{ property.last | split: '/' | last }}
                                </a>
                              {%- else -%}
                                {{ property.last }}
                              {%- endif -%}
                            </dd>
                          </div>
                        {%- endif -%}
                      {%- endfor -%}
                    </dl>

                    {%- if item.selling_plan_allocation != null -%}
                      <p class="mt-2 mb-0">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                    {%- endif -%}
                  </div>
                {%- endif -%}

                {%- if section.settings.show_backorder_text -%}
                  {% render 'backorder', product: item.product, variant: item.variant %}
                {%- endif -%}

                {%- if item.discounts.size > 0 -%}
                  <ul class="mt-3 mb-2 font-bold" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                    {%- for discount in item.discounts -%}
                      <li class="mt-2">
                        <div class="discount text-sm inline-flex items-center" dir="auto">
                          {% render 'icon-tags' %}
                          {{- discount.title | escape_once -}}
                        </div>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>
            </td>
            <td class="cart-item__qty {% if item.properties and item.properties['_gpo_parent_product_group'] %}hidden{% endif %}">
              <div class="flex items-center mt-4">
                {% render 'quantity-input', is_cart: true, item: item, layout_style: 'combined' %}
                <a
                  class="cart-item__remove btn btn--icon text-current tap-target js-remove-item"
                  href="{{ item.url_to_remove }}"
                  data-index="{{ item.index | plus: 1 }}"
                  aria-label="{{- 'cart.items.remove' | t -}}"
                  {% if settings.preload_links %}
                    data-no-instant
                  {% endif %}
                >
                  {% render 'icon-trash' %}
                </a>
                <div class="cart-item__loader relative is-loading" hidden></div>
              </div>
              <div
                class="alert mt-6 bg-error-bg text-error-text cart-item__error"
                id="line-item-error-{{ item.index | plus: 1 }}"
                role="alert"
                hidden
              ></div>
            </td>
            <td class="cart-item__total price">
              <div class="text-theme-light text-sm mb-2 md:hidden">
                {{ 'cart.items.total' | t }}
              </div>
              {%- if variant_price_reduced or item.original_line_price != item.final_line_price -%}
                <dl class="m-0 flex md:block">
                  <dt class="visually-hidden">
                    {{- 'products.product.price.sale_price' | t -}}
                  </dt>
                  <dd class="price__current m-0 font-bold">
                    {%- render 'price-as-money', price: item.final_line_price, show_money_with_currency: false -%}
                  </dd>
                  <dt class="visually-hidden">
                    {{- 'products.product.price.regular_price' | t -}}
                  </dt>
                  <dd class="m-0">
                    {%- if variant_price_reduced -%}
                      <s class="price__was{% if settings.superscript_decimals %} price__was--supercents{% endif %}">
                        {%- liquid
                          assign compare_at_total_price = item.variant.compare_at_price | times: item.quantity
                          render 'price-as-money', price: compare_at_total_price, show_money_with_currency: false
                        -%}
                      </s>
                    {%- else -%}
                      <s class="price__was{% if settings.superscript_decimals %} price__was--supercents{% endif %}">
                        {%- render 'price-as-money',
                          price: item.original_line_price,
                          show_money_with_currency: false
                        -%}
                      </s>
                    {%- endif -%}
                  </dd>
                </dl>
              {%- else -%}
                {% if item.price > 0 %}
                  <strong class="price__current">
                    {%- render 'price-as-money', price: item.original_line_price, show_money_with_currency: false -%}
                  </strong>
                {% endif %}
              {%- endif -%}
            </td>
          </tr>

          {% comment %}
            {% if item.product.metafields.custom.upsell_product_variants %}
              <tr class="upsell_tr">
                <td class="upsell__heading">
                  <h3>{{ section_settings.upsell_heading }}</h3>
                </td>
                {% assign upsell_products = item.product.metafields.custom.upsell_product_variants.value %}
                {% if upsell_products != blank and item.product.metafields.custom.product_discount %}
                  {% assign discount_status = true %}
                  {% assign discount = item.product.metafields.custom.product_discount %}
                {% else %}
                  {% assign discount_status = false %}
                {% endif %}
                {% for product in upsell_products %}
                  {% assign upsell_btn_label = 'Upgrade Heater' %}
                  <td class="upsell_td">
                    {% render 'product-card-mini',
                      product: product,
                      upsell_price: product.price,
                      upsell_btn_label: upsell_btn_label,
                      discount_status: discount_status,
                      discount: discount
                    %}
                  </td>
                {% endfor %}
              </tr>
            {% endif %}
          {% endcomment %}
        {%- endfor -%}

        <!-- ADD-ONS -->
        {% comment %}
          {% assign addon_counter = 0 %}
          {%- for item in cart.items -%}
            {% if item.product.metafields.custom.cart_product_addons %}
              {% assign addon_counter = addon_counter | plus: 1 %}

              <tr class="upsell_tr addons--row">
                {% if addon_counter == 1 %}
                  <td class="upsell__heading">
                    <h3>{{ section_settings.addon_heading }}</h3>
                  </td>
                {% endif %}
                {% assign addons_products = item.product.metafields.custom.cart_product_addons.value %}
                {% for product in addons_products %}
                  {% assign upsell_btn_label = 'Add To Add-Ons' %}
                  <td class="upsell_td">
                    {% assign product_handle = '' %}
                    {% assign full_url = product.url %}
                    {% assign featured_media = '' %}

                    {% if product.url contains '?variant=' and product.title contains 'Default Title' %}
                      {% assign product_handle = full_url | split: '/' | last | split: '?' | first %}
                      {% assign product_handle = all_products[product_handle].title %}
                    {% endif %}
                    {% if product.featured_media == blank %}
                      {% assign product_handle = full_url | split: '/' | last | split: '?' | first %}
                      {% assign featured_media = all_products[product_handle].featured_media %}
                    {% endif %}
                    {% render 'product-card-mini',
                      product: product,
                      upsell_price: product.price,
                      upsell_btn_label: upsell_btn_label,
                      product_title: product_handle,
                      featured_media: featured_media
                    %}
                  </td>
                {% endfor %}
              </tr>
            {% endif %}
          {% endfor %}
        {% endcomment %}
      </tbody>
    </table>
  {%- endif -%}

  <p class="visually-hidden" id="cart-live-region-text" role="status" aria-live="polite">
    {{ 'cart.summary.subtotal' | t }}:
    {%- render 'price-as-money', price: cart.total_price, show_money_with_currency: true -%}
  </p>
  <p class="visually-hidden" id="cart-line-item-status" role="status" aria-live="polite" aria-hidden="true">
    {{- 'accessibility.loading' | t -}}
  </p>

  {%- if is_drawer -%}
    <div class="alert mt-6 bg-error-bg text-error-text" id="cart-errors" role="alert" hidden></div>
  {%- endif -%}
</cart-items>